    <ContentPage.Content>
        <!--
        VerticalOptions="Start" HorizontalOptions="Start" Padding="30"
        -->
        <StackLayout x:Name="mainLayout">
            <Grid>
                <autocomplete:SfAutoComplete HeightRequest="40" x:Name="autoComplete" Watermark="Input Nama Barang" DataSource="{Binding ItemCollection}" AutoCompleteMode="Suggest"
                                         SuggestionMode="Contains" TextHighlightMode="MultipleOccurrence" HighlightedTextColor="BlueViolet" NoResultsFoundText="No Results Found"
                                         SuggestionBoxPlacement="Bottom" MaximumDropDownHeight="200"
                                             Grid.Row="0"
                                             Grid.Column="0">

                </autocomplete:SfAutoComplete>
                <Button x:Name="btnSelect" Text="+" 
                        Clicked="OpenMultipleDataInputAlertDialogButton_OnClicked"
                        FontSize="Large"
                        Grid.Row="0"
                        Grid.Column="1"></Button>
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
            </Grid>
            

            <!--<Button x:Name="clickToShowPopup" Text="ClickToShowPopup" VerticalOptions="Start" HorizontalOptions="FillAndExpand" Clicked="OpenMultipleDataInputAlertDialogButton_OnClicked" />-->

            <ListView x:Name="lvCart" ItemTapped="OnListItemSelected"  SelectedItem="{Binding NOM}">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding NM_BRG}" Detail="{Binding DETAIL}" DetailColor="Black" />
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>
            
            <!--<Label
            x:Name="InputResultLabel"
            Margin="0,10,0,10"
            FontSize="Medium"
            HorizontalOptions="Center"
            HorizontalTextAlignment="Center"
            Text="-Input Results will show up here-" />-->
            <Grid>
                <Label 
                    Grid.Row="0"
                    Grid.Column="0"
                    Text="Grand Total"
                    FontSize="Medium"/>
                <Label 
                    Grid.Row="0"
                    Grid.Column="1"
                    Text="(Rp):"
                    FontSize="Medium"/>
                <Label
                    Grid.Row="0"
                    Grid.Column="2"
                    x:Name="LblTotal"
                    FontSize="Medium"
                    TextColor="Black"
                    Text="102,000"
                    HorizontalTextAlignment="End"/>
                <Label 
                    Grid.Row="1"
                    Grid.Column="0"
                    Text="Pembulatan"
                    FontSize="Medium"/>
                <Label 
                    Grid.Row="1"
                    Grid.Column="1"
                    Text="(Rp):"
                    FontSize="Medium"/>
                <Label
                    Grid.Row="1"
                    Grid.Column="2"
                    x:Name="LblPembulatan"
                    FontSize="Medium"
                    TextColor="Black"
                    Text="102"
                    HorizontalTextAlignment="End"/>
                <Label 
                    Grid.Row="2"
                    Grid.Column="0"
                    Text="Total Hemat"
                    FontSize="Medium"/>
                <Label 
                    Grid.Row="2"
                    Grid.Column="1"
                    Text="(Rp):"
                    FontSize="Medium"/>
                <Label
                    Grid.Row="2"
                    Grid.Column="2"
                    x:Name="LblTotHemat"
                    FontSize="Medium"
                    TextColor="Black"
                    Text="1,500"
                    HorizontalTextAlignment="End"/>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
            </Grid>
            
            <!--<Label
                x:Name="LblTotal"
                Margin="0,10,0,10"
                FontSize="Medium"
                Text="Rp.102,000" />-->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>